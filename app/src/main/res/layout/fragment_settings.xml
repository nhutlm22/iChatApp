<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mauchinh_dark">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_settings"
        android:background="@color/bg_home"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:background="@drawable/ic_back"
                android:layout_marginRight="16dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                app:tint="@color/white"/>

            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ivBack"
                android:fontFamily="@font/arialbd"
                android:text="Settings"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/ivAccount"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_user_profile"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ari"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/ivAccount"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:text="Account"/>

            <ImageView
                android:id="@+id/ivToAccount"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:background="@drawable/ic_icon"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivChangePassword"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_key"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tvChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ari"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/ivChangePassword"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:text="Change password"/>

            <ImageView
                android:id="@+id/ivToChangePassword"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:background="@drawable/ic_icon"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivNotifications"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_bell"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tvNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ari"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/ivNotifications"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:text="Notifications"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sNotifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:thumb="@drawable/thumb_switch" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivDarkMode"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_darkmode"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tvDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ari"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/ivDarkMode"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:text="Dark mode"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:thumb="@drawable/thumb_switch" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivLogout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_logout"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ari"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/ivLogout"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:text="Logout"/>

            <ImageView
                android:id="@+id/ivToLogout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_logout"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>